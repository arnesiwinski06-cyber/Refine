    color: #333;
}

/* Header / Navigatie */
header {
    background-color: #1a73e8;
    color: white;
    padding: 15px 0;
    text-align: center;
    position: sticky;
    top: 0;
    z-index: 100;
}

header h1 {
    margin: 0;
}

nav a {
    color: white;
    text-decoration: none;
    margin: 0 15px;
    font-weight: bold;
    transition: 0.3s;
}

nav a:hover {
    text-decoration: underline;
    color: #ffdd57;
}

/* Container */
.container {
    max-width: 1000px;
    margin: 50px auto;
    padding: 0 20px;
}

/* Knoppen */
