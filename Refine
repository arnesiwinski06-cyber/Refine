    display: inline-block;
    padding: 10px 20px;
    margin: 10px 0;
    background-color: #1a73e8;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.3s;
}

.button:hover {
    background-color: #155ab6;
}

/* Afbeeldingen */
